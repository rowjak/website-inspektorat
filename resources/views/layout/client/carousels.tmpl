<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Embla Carousel with Bootstrap</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/embla-carousel/8.0.0/embla-carousel.css" rel="stylesheet">
    <style>
        .embla {
            position: relative;
            background: #f8f9fa;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .embla__viewport {
            overflow: hidden;
            border-radius: 10px;
        }

        .embla__container {
            display: flex;
        }

        .embla__slide {
            flex: 0 0 100%;
            min-width: 0;
            position: relative;
        }

        .embla__slide__img {
            width: 100%;
            height: 400px;
            object-fit: cover;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .embla__slide__img:hover {
            transform: scale(1.02);
        }

        .embla__controls {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }

        .embla__buttons {
            display: flex;
            gap: 10px;
        }

        .embla__button {
            background: linear-gradient(135deg, #007bff, #0056b3);
            border: none;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0,123,255,0.3);
        }

        .embla__button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,123,255,0.4);
            background: linear-gradient(135deg, #0056b3, #003d82);
        }

        .embla__button:disabled {
            background: #6c757d;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .embla__button svg {
            width: 20px;
            height: 20px;
        }

        .embla__dots {
            display: flex;
            gap: 8px;
            justify-content: center;
            align-items: center;
        }

        .embla__dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #dee2e6;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .embla__dot:hover {
            background: #adb5bd;
            transform: scale(1.2);
        }

        .embla__dot--selected {
            background: linear-gradient(135deg, #007bff, #0056b3);
            transform: scale(1.3);
            box-shadow: 0 2px 8px rgba(0,123,255,0.4);
        }

        .slide-info {
            position: absolute;
            bottom: 20px;
            left: 20px;
            background: rgba(0,0,0,0.7);
            color: white;
            padding: 15px 20px;
            border-radius: 10px;
            backdrop-filter: blur(10px);
        }

        .slide-info h5 {
            margin: 0 0 5px 0;
            font-weight: 600;
        }

        .slide-info p {
            margin: 0;
            opacity: 0.9;
            font-size: 14px;
        }

        @media (max-width: 768px) {
            .embla__slide__img {
                height: 250px;
            }
            
            .embla__button {
                width: 40px;
                height: 40px;
            }
            
            .slide-info {
                bottom: 10px;
                left: 10px;
                right: 10px;
                padding: 10px 15px;
            }
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 class="text-center mb-4 fw-bold">Beautiful Image Carousel</h2>
                
                <div class="embla">
                    <div class="embla__viewport">
                        <div class="embla__container">
                            <div class="embla__slide">
                                <img class="embla__slide__img" src="https://picsum.photos/800/400?random=1" alt="Beautiful landscape 1">
                                <div class="slide-info">
                                    <h5>Stunning Mountain View</h5>
                                    <p>Breathtaking panoramic view of snow-capped mountains</p>
                                </div>
                            </div>
                            
                            <div class="embla__slide">
                                <img class="embla__slide__img" src="https://picsum.photos/800/400?random=2" alt="Beautiful landscape 2">
                                <div class="slide-info">
                                    <h5>Ocean Sunset</h5>
                                    <p>Golden hour over the endless blue ocean</p>
                                </div>
                            </div>
                            
                            <div class="embla__slide">
                                <img class="embla__slide__img" src="https://picsum.photos/800/400?random=3" alt="Beautiful landscape 3">
                                <div class="slide-info">
                                    <h5>Forest Adventure</h5>
                                    <p>Deep into the mysterious green forest</p>
                                </div>
                            </div>
                            
                            <div class="embla__slide">
                                <img class="embla__slide__img" src="https://picsum.photos/800/400?random=4" alt="Beautiful landscape 4">
                                <div class="slide-info">
                                    <h5>Urban Skyline</h5>
                                    <p>Modern city lights illuminating the night</p>
                                </div>
                            </div>
                            
                            <div class="embla__slide">
                                <img class="embla__slide__img" src="https://picsum.photos/800/400?random=5" alt="Beautiful landscape 5">
                                <div class="slide-info">
                                    <h5>Desert Dunes</h5>
                                    <p>Endless golden sand dunes under clear sky</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="embla__controls">
                        <div class="embla__buttons">
                            <button class="embla__button embla__button--prev" type="button">
                                <svg viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
                                </svg>
                            </button>
                            
                            <button class="embla__button embla__button--next" type="button">
                                <svg viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
                                </svg>
                            </button>
                        </div>
                        
                        <div class="embla__dots"></div>
                    </div>
                </div>
                
                <div class="text-center mt-4">
                    <p class="text-muted">
                        <small>Use navigation arrows or dots to browse images â€¢ Auto-loop enabled</small>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/embla-carousel/8.0.0/embla-carousel.umd.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const emblaNode = document.querySelector('.embla__viewport');
            const prevBtn = document.querySelector('.embla__button--prev');
            const nextBtn = document.querySelector('.embla__button--next');
            const dotsNode = document.querySelector('.embla__dots');

            // Initialize Embla with options
            const embla = EmblaCarousel(emblaNode, {
                loop: true,
                align: 'center',
                skipSnaps: false,
                dragFree: false,
                containScroll: 'trimSnaps'
            });

            // Create dots
            function createDots() {
                const slides = embla.slideNodes();
                const dotsHTML = slides.map((_, index) => 
                    `<button class="embla__dot" type="button" data-index="${index}"></button>`
                ).join('');
                dotsNode.innerHTML = dotsHTML;
                
                return Array.from(dotsNode.querySelectorAll('.embla__dot'));
            }

            const dots = createDots();

            // Update button states
            function updateButtons() {
                if (embla.canScrollPrev()) {
                    prevBtn.removeAttribute('disabled');
                } else {
                    prevBtn.setAttribute('disabled', 'disabled');
                }

                if (embla.canScrollNext()) {
                    nextBtn.removeAttribute('disabled');
                } else {
                    nextBtn.setAttribute('disabled', 'disabled');
                }
            }

            // Update dots
            function updateDots() {
                const selectedIndex = embla.selectedScrollSnap();
                dots.forEach((dot, index) => {
                    if (index === selectedIndex) {
                        dot.classList.add('embla__dot--selected');
                    } else {
                        dot.classList.remove('embla__dot--selected');
                    }
                });
            }

            // Event listeners
            prevBtn.addEventListener('click', () => {
                embla.scrollPrev();
            });

            nextBtn.addEventListener('click', () => {
                embla.scrollNext();
            });

            dots.forEach((dot, index) => {
                dot.addEventListener('click', () => {
                    embla.scrollTo(index);
                });
            });

            // Embla event listeners
            embla.on('select', () => {
                updateButtons();
                updateDots();
            });

            embla.on('init', () => {
                updateButtons();
                updateDots();
            });

            // Auto-play functionality
            let autoplayTimer;
            
            function startAutoplay() {
                autoplayTimer = setInterval(() => {
                    embla.scrollNext();
                }, 4000);
            }

            function stopAutoplay() {
                if (autoplayTimer) {
                    clearInterval(autoplayTimer);
                }
            }

            // Start autoplay
            startAutoplay();

            // Pause autoplay on hover
            const emblaContainer = document.querySelector('.embla');
            emblaContainer.addEventListener('mouseenter', stopAutoplay);
            emblaContainer.addEventListener('mouseleave', startAutoplay);

            // Pause autoplay on interaction
            emblaNode.addEventListener('pointerdown', stopAutoplay);
            
            // Resume autoplay after interaction
            embla.on('settle', () => {
                if (!emblaContainer.matches(':hover')) {
                    startAutoplay();
                }
            });

            // Keyboard navigation
            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowLeft') {
                    e.preventDefault();
                    embla.scrollPrev();
                } else if (e.key === 'ArrowRight') {
                    e.preventDefault();
                    embla.scrollNext();
                }
            });

            // Touch/swipe support is built into Embla by default
            console.log('ðŸŽ  Embla Carousel initialized with all features!');
        });
    </script>
</body>
</html>
